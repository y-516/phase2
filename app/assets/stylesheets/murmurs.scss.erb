html{
  min-height: 100%;
  position: relative;
}
body{
  min-height: calc(100% - 60px);
  margin: 0;
}
ul{
  margin:0;
}
header a{ 
  color:white; 
}
.header{
  font-size:20px;
  height:100px;
  width:100%;
  background-color:#8EB8FF;
}
li{
  list-style :none;
}
.header li{
  float:left;
  padding:10px;
  margin:15px;
}
.footer{
  width:100%;
  bottom: 0;
  position: absolute;
}
.footer p{
  height:100px;
  display: flex;
	align-items: center;
	justify-content: center;
	background-color:#8EB8FF;
	margin:0;
	color:white;
}
.clearfix:after{
  content:"";
  display:block;
  clear:both;
}
.top{
  height:1000px;
  background-image:url(<%= asset_path 'sky9-e-ov1920x1200' %>);
	width:100%; 
}
.top p{
  text-align:center;
  margin-top:0;
  font-size:50px;
  font-family:cursive;
  color:white;
}
.top2{
  height:1000px;
  background-color:rgba(255,255,255,0.5);
  width:100%;
  display: flex;
	align-items: center;
	justify-content: center;
}
.center{
  text-align:center;
}
.index_table{
  text-align:center;
}
table {
  margin-left:auto;
  margin-right:auto;
  margin-bottom:150px;
}
.update{
    display: inline-block;
    padding: 0.5em 1em;
    text-decoration: none;
    color: #67c5ff;
    border: dashed 1px #67c5ff;
    background: #A4C6FF;
    border-radius: 3px;
    transition: .4s;
}
.delete{
  display: inline-block;
  padding: 0.5em 1em;
  text-decoration: none;
  color: #67c5ff;
  border: dashed 1px #67c5ff;
  background: #FFABCE;
  border-radius: 3px;
  transition: .4s;
}
.square_btn:hover {
    background: #cbedff;
    color: #FFF;
}

